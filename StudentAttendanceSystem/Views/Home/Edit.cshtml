@model ClassModel

@{
    ViewData["Title"] = "Edit Class";
}

<form method="post">

    <input asp-for="Id" hidden />

    <div class="border p-2 mt-4">
        <div class="row pb-2">
            <h2>Edit Class</h2>
        </div>
        <div class="mb-3 p-1">
            <label asp-for="Name" class="p-0 my-2"></label>
            <input asp-for="Name"
                   type="text"
                   class="form-control"
                   placeholder="Enter class Name" />
            <span asp-validation-for="Name" class="pt-1 text-danger"></span>
        </div>

        <div asp-validation-summary="All"></div>

        <div class="d-flex gap-1">
            <button type="submit" class="btn btn-primary">
                Edit
            </button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                Cancel
            </a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
