@model SectionModel

@{
    ViewData["Title"] = "Delete Section";
}

<form method="post">

    @*Class Id*@
    <input asp-for="ClassId" hidden />
    <input asp-for="Id" hidden />

    <div class="border p-2 mt-4">
        <div class="row pb-2">
            <h2>Delete Section</h2>
        </div>
        <div class="mb-3 p-1">
            <label asp-for="Name" class="p-0 my-2"></label>
            <input asp-for="Name"
                   type="text"
                   class="form-control"
                   placeholder="Enter new section name" disabled />
            <span asp-validation-for="Name" class="pt-1 text-danger"></span>
        </div>

        <div asp-validation-summary="All"></div>


        <div class="d-flex gap-1">
            <button type="submit" class="btn btn-outline-danger">
                Delete
            </button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                Cancel
            </a>
        </div>
    </div>
</form>
